#!/bin/bash -l
# FILENAME:  Solve_QCQP_Our_Algorithm_Parallel_Core_256.sub
#SBATCH --ntasks=257
#SBATCH --cpus-per-task=1
#SBATCH --nodes=14
#SBATCH --ntasks-per-node=19
#SBATCH --exclusive
#SBATCH --time=04:00:00
#SBATCH -A standby

cd $SLURM_SUBMIT_DIR

module --force purge
module load intel
module load impi
module load utilities monitor
module list

# start memory resource monitor
monitor cpu memory --csv | head -1 >${SLURM_JOB_NAME}.${SLURM_JOB_ID}.memory.csv
mpiexec -machinefile <(srun hostname | sort -u) \
	monitor cpu memory --csv --no-header \
	>>${SLURM_JOB_NAME}.${SLURM_JOB_ID}.memory.csv &
MEM_PID=$!

mpirun -bootstrap slurm -n 257 ./Solve_QCQP_Our_Algorithm_Parallel_Core_256

# wait 10  minutes
sleep 600

# stop resource monitors
kill -s INT $MEM_PID